<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/content_plateView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/content_plateView_description"
            app:srcCompat="@drawable/macarrones" />

        <TextView
            android:id="@+id/content_plateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/content_plateView"
            android:layout_marginTop="16dp"
            android:gravity="center"
            tools:text="Nombre plato"
            android:contentDescription="@string/content_plateView_description"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>