        tools:layout_editor_absoluteY="279dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/gluten"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="279dp" />

